# UniFi Network API Configuration
# Required settings
UNIFI_API_KEY=                  # UniFi Network API key (required)
UNIFI_HOST=                     # UniFi Network controller hostname/IP (required)

# Optional API settings
UNIFI_PORT=8443                 # UniFi Network controller port (default: 8443)
UNIFI_VERIFY_SSL=false          # Whether to verify SSL certificates (default: false)
UNIFI_TIMEOUT=10                # API request timeout in seconds (default: 10)
UNIFI_SITE=default             # UniFi Network site name (default: default)
UNIFI_API_VERSION=v1           # UniFi Network API version (v1 or v2, default: v1)

# Logging Configuration
ISMINET_LOG_LEVEL=INFO         # Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL, default: INFO)
ISMINET_DEV_MODE=false         # Development mode flag (default: false)
ISMINET_LOG_TO_FILE=true       # Whether to log to file (default: true)

# Test Configuration (only used in test environment)
TEST_API_KEY=test_key          # Default API key for tests
TEST_HOST=test.host            # Default host for tests
TEST_PORT=8443                 # Default port for tests
